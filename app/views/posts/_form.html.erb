<%= form_for :post do |f|%>

  <%= f.text_area :text, rows: 2, style: 'width:100%;padding-top:5px;'%><br />

  <%=f.file_field :post_images, multiple: true, style:"padding:0;", class:"btn btn-outline-dark btn-sm"%>

  <%= f.submit "Create Post", style:"float:right;", class:"btn btn-outline-dark btn-sm"%>

<% end %>