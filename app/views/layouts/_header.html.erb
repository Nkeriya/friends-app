<div >
    <% if user_signed_in? %>
        <div style="float:left;min-width:auto;">
        <p style="margin:0;" >
            <%= link_to "Home", users_path %> | 
            <%= link_to "Profile", user_path(current_user) %> |
            <%= link_to "Friend Requests", friend_request_path(current_user) %> |
            <%= current_user.email%> | 
            <%= link_to "Sign out", destroy_user_session_path, method: :delete %> |
        </p>
        </div>
        <div>
            <%= form_tag search_page_path, method: :GET do %>  
            
                <%= search_field_tag :search, params[:search], placeholder: "Search user"%>  
                <%= button_tag "search"%>
            <% end %>

        </div>

    <% else %>
        <div>
            <p>
                <%= link_to "Sign In", new_user_session_path %> | 
                <%= link_to "Sign Up", new_user_registration_path  %>
            </p>
        </div>

    <% end %>
</div>